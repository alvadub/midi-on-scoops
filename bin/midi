#!/bin/sh

':' // ; exec "$(command -v nodejs || command -v node)" "$0" "$@"
;

'use strict';

const fs = require('fs');
const watch = require('node-watch');
const spawn = require('child_process').spawn;

const builder = require('../lib/builder');
const parser = require('../lib/parsing');

const children = [];

const log = msg => process.stdout.write(msg);

const musicDir = process.argv.slice(2)[0] || 'music';
const prefix = '♫ MIDI on SCOOPS';
const CLR = '\x1b[K';

const bin = process.argv.slice(2)[1] || 'timidity';
const argv = process.argv.slice(4);

let tt;

function play(name) {
  log(`\b  ( ${prefix} ) Loading ${name} ...${CLR}\r`);

  const text = fs.readFileSync(name).toString();
  const ast = parser(text);
  const code = builder(ast);

  children.forEach((child, i) => {
    children.splice(i, 1);
    child.kill('SIGINT');
  });

  clearTimeout(tt);

  const audio = `${ast.settings.name || name.replace('.txt', '')}.mid`;

  let _bin;
  let _argv;

  if (ast.settings.spawn) {
    _argv = ast.settings.spawn.split(' ');
    _bin = _argv.shift();
  } else {
    _argv = argv.slice();
    _bin = bin;
  }

  code
    .save(audio)
    .then(() => {
      setTimeout(() => {
        log(`\b  ( ${prefix} ) ► Playing: ${audio}${CLR}\r`);
      }, 100);

      const child = spawn(_bin, _argv.concat(audio), {
        detached: false,
      });

      child.on('close', () => {
        log(`\b  ( ${prefix} ) ⏏ Done playing: ${audio}${CLR}\r`);
      });

      children.push(child);
    })
    .catch(e => {
      log(`\n${e.stack}\n`);
    });
}

let i = 0;

const chars = '\\|/-';

setInterval(() => {
  log(`\b${chars[i % chars.length]}\r`);
  i++;
}, 260);

if (process.argv.slice(2)[0] && process.argv.slice(2)[0].indexOf('.txt') > -1) {
  play(process.argv.slice(2)[0]);
} else {
  log(`\b  ( ${prefix} ) Watching from: ${musicDir} ...${CLR}\r`);

  watch(musicDir, { recursive: true, filter: /\.txt$/ }, (evt, name) => {
    try {
      play(name);
    } catch (e) {
      log(`\n${e.stack}\n`);
    }

    log(`\b  ( ${prefix} ) ${name} changed${CLR}\r`);
  });
}

process.on('SIGINT', () => {
  log('\r\r');

  children.forEach((child, k) => {
    children.splice(k, 1);
    child.kill('SIGINT');
  });

  clearTimeout(tt);

  process.exit(1);
});
