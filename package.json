{
  "name": "midi-on-scoops",
  "version": "0.0.0",
  "description": "MIDI/DAW for the DUB enthusiast!",
  "author": "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)",
  "_main": "dist/midi-on-scoops.cjs.js",
  "_module": "dist/midi-on-scoops.es.js",
  "bin": {
    "dub": "bin/dub"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npm run build -- -w",
    "dist": "npm run build -- -q",
    "check": "eslint 'src/**/*.{js,pug,svelte}'",
    "build": "mortero -dX'{lib,components}' -ecss.less -I.gitignore -Nscribbletune -p8081",
    "mocha": "NODE_ENV=test _mocha -c -r esm --exit --verbose --recursive",
    "test": "npm run test:unit --",
    "test:unit": "npm run mocha -- -bR spec 'tests/*.test.js'",
    "test:coverage": "nyc --silent -x '**/*.test.js'",
    "test:coverage:unit": "npm run test:coverage -- npm run test:unit --",
    "test:report": "nyc report"
  },
  "mortero": {
    "bundle": [
      "**/index.js"
    ],
    "rename": [
      "src/**:{filepath/1}"
    ],
    "options": {
      "less": {
        "plugins": [
          "less-plugin-autoprefix"
        ]
      }
    }
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "codecov": "^3.7.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-svelte3": "^3.2.0",
    "esm": "^3.2.25",
    "harmonics": "^1.0.8",
    "less": "^4.1.1",
    "less-plugin-autoprefix": "^2.0.0",
    "mocha": "^9.1.1",
    "mortero": "0.0.45",
    "pug": "^3.0.2",
    "svelte": "^3.42.5"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "jsmidgen": "^0.1.5",
    "keypress": "^0.2.1",
    "node-watch": "^0.7.1",
    "wargs": "^0.9.5"
  }
}
